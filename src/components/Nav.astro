---
const base = import.meta.env.BASE_URL;
const links = [
  { href: base, label: 'Inicio' },
  { href: `${base}/about`, label: 'Sobre el proyecto' },
  { href: `${base}/blog`, label: 'Blog' },
];
const current = Astro.url.pathname.replace(/\/+$/, '') || base;
---
<nav class="nav">
  <a href={base} class="nav__brand" aria-label="Voces de Sierra Morena, inicio">
    <img src={`${base}/logo.svg`} alt="Logo" class="nav__brand-logo" />
    <span>Voces de Sierra Morena</span>
  </a>
  <span class="nav__sep">â€¢</span>
  <ul class="nav__links">
    {links.map(l => (
      <li>
        <a href={l.href} aria-current={current === l.href ? 'page' : undefined}>
          {l.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
