---
const links = [
  { href: '/', label: 'Inicio' },
  { href: '/about', label: 'Sobre el proyecto' },
  { href: '/blog', label: 'Blog' },
];
const current = Astro.url.pathname.replace(/\/+$/, '') || '/';
---
<nav class="nav">
  <a href="/" class="nav__brand" aria-label="Voces de Sierra Morena, inicio">
    <span class="nav__brand-logo" aria-hidden="true"></span>
    <span>Voces de Sierra Morena</span>
  </a>
  <span class="nav__sep">â€¢</span>
  <ul class="nav__links">
    {links.map(l => (
      <li>
        <a href={l.href} aria-current={current === l.href ? 'page' : undefined}>
          {l.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
