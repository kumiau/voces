---
import Nav from '@/components/Nav.astro';
import '@/styles/theme.css'; // <— importa tu tema global

const {
  title = 'Voces de Sierra Morena',
  description = 'Memoria oral familiar',
  cover
} = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="container">
      <header class="site">
        <Nav />
      </header>

      {cover && <img src={cover} alt="" class="hero" />}

      <main>
        <slot />
      </main>

      <footer class="site">
        Proyecto familiar • Voces de Sierra Morena — {new Date().getFullYear()}
      </footer>
    </div>
  </body>
</html>
